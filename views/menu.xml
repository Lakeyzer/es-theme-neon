<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="menu">
    <menuText name="menutitle">
      <fontPath>./../_inc/fonts/Neon.ttf</fontPath>
      <fontSize>0.034</fontSize>
      <color>${white}</color>
    </menuText>
    <menuText name="menufooter">
      <fontPath>./../_inc/fonts/Neon.ttf</fontPath>
      <fontSize>0.02</fontSize>
      <color>777777FF</color>
    </menuText>
    <menuText name="menutext">
      <fontPath>./../_inc/fonts/Neon.ttf</fontPath>
      <fontSize>0.026</fontSize>
      <fontSize tinyScreen="true">0.034</fontSize>
      <color>969696</color>
      <separatorColor>${transparent}</separatorColor>
      <selectorColor>${transparent}</selectorColor>
<!--      <selectorColorEnd>${blue}</selectorColorEnd>-->
      <selectedColor>${blue}</selectedColor>
      <selectorGradientType>horizontal</selectorGradientType>
    </menuText>
    <menuTextSmall name="menutextsmall">
      <fontPath>./../_inc/fonts/Neon.ttf</fontPath>
      <fontSize>0.016</fontSize>
      <color>${white}</color>
    </menuTextSmall>
    <menuGroup name="menugroup">
      <fontPath>./../_inc/fonts/Neon.ttf</fontPath>
      <fontSize>0.018</fontSize>
      <color>${white}</color>
  <!-- <separatorColor>${groupSeparatorColor}</separatorColor>-->
      <backgroundColor>00000000</backgroundColor>
      <lineSpacing>2.5</lineSpacing>
    </menuGroup>
    <menuBackground name="menubg">
      <color>242424</color>
      <cornerSize>32 32</cornerSize>
      <path>./../_inc/images/frame.png</path>
      <scrollbarColor>96969620</scrollbarColor>
      <scrollbarCorner>0.49</scrollbarCorner>
      <scrollbarSize>0.003</scrollbarSize>
      <scrollbarAlignment>innerright</scrollbarAlignment>
    </menuBackground>
    <menuIcons name="menuicons">
      <iconKodi>./../_inc/images/icons/Kodi.png</iconKodi>
      <iconSystem>./../_inc/images/icons/System.png</iconSystem>
      <iconUpdates>./../_inc/images/icons/Updates.png</iconUpdates>
      <iconGames>./../_inc/images/icons/Games.png</iconGames>
      <iconControllers>./../_inc/images/icons/Controllers.png</iconControllers>
      <iconUI>./../_inc/images/icons/UI.png</iconUI>
      <iconSound>./../_inc/images/icons/Sound.png</iconSound>
      <iconNetwork>./../_inc/images/icons/Network.png</iconNetwork>
      <iconPlanemode>./../_inc/images/icons/Planemode.png</iconPlanemode>
      <iconScraper>./../_inc/images/icons/Scraper.png</iconScraper>
      <iconAdvanced>./../_inc/images/icons/Advanced.png</iconAdvanced>
      <iconQuit>./../_inc/images/icons/Quit.png</iconQuit>
      <iconRestart>./../_inc/images/icons/Restart.png</iconRestart>
      <iconShutdown>./../_inc/images/icons/Shutdown.png</iconShutdown>
      <iconFastShutdown>./../_inc/images/icons/Fastshutdown.png</iconFastShutdown>
      <iconRetroachievements>./../_inc/images/icons/Contest.png</iconRetroachievements>
      <iconManual>./../_inc/images/icons/Manual.png</iconManual>
    </menuIcons>
    <menuTextEdit name="menutextedit">
      <inactive>./../_inc/images/textinput_ninepatch.png</inactive>
      <active>./../_inc/images/textinput_ninepatch_active.png</active>
    </menuTextEdit>
    <menuButton name="menubutton">
      <path>./../_inc/images/button.png</path>
      <filledPath>./../_inc/images/button_filled.png</filledPath>
      <cornerSize>8 8</cornerSize>
    </menuButton>
  </view>
</theme>
